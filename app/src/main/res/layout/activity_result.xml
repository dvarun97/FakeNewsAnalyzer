<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fakestudios.devs.fakenewsanalyzer.ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.fake.com"
            android:textSize="24sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="is" />

        <TextView
            android:id="@+id/probablyReal_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Probably REAL"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:background="@drawable/roundbutton"
            android:backgroundTint="@color/realGreen"/>

        <TextView
            android:id="@+id/result_type1_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/roundbutton"
            android:text="type 1"
            android:backgroundTint="@color/yellow"/>

        <TextView
            android:id="@+id/result_type2_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:background="@drawable/roundbutton"
            android:text="type 2"
            android:backgroundTint="@color/yellow"/>

        <TextView
            android:id="@+id/result_type3_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_margin="8dp"
            android:background="@drawable/roundbutton"
            android:text="type 3"
            android:backgroundTint="@color/yellow"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Additional Notes: "
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/result_notes_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:text="This website is probably fake" />

        </LinearLayout>



    </LinearLayout>

    <Button
        android:id="@+id/result_home_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@drawable/roundbutton"
        android:layout_margin="16dp"/>

</RelativeLayout>
